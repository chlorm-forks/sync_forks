#!/usr/bin/env sh

# Current directory is used as the working directory
export workDir=$(pwd)

log_error() {

  echo "$(date '+%F %R') $@" >> $workDir/sync-fork.errors

}

upstream_url() {

  case $upstreamRepoVcs in
    'bazaar')
      case $remoteRepoLocation in
        '')
          echo ""
          ;;
        *)
          log_error "invalid remote repo location: $remoteRepoLocation"
          return 1
          ;;
      esac
      ;;
      'cvs')
        case $remoteRepoLocation in
          '')
            echo ""
            ;;
          *)
            log_error "invalid remote repo location: $remoteRepoLocation"\
            return 1
            ;;
        esac
        ;;
      'darcs')
        case $remoteRepoLocation in
          '')
            echo ""
            ;;
          *)
            log_error "invalid remote repo location: $remoteRepoLocation"
            return 1
            ;;
        esac
        ;;
      'git')
        case $remoteRepoLocation in
          'blicky')
            echo "git://g.blicky.net"
            ;;
          'github')
            echo "git@github.com:$accountName"
            ;;
          'googlecode')
            echo "git://code.google.com"
            ;;
          'googlesource')
            echo "git://$projectName.googlesource.com/$accountName"
            ;;
          'videolan')
            echo "git://git.videolan.org"
            ;;
          *)
            log_error "invalid remote repo location: $remoteRepoLocation"
            return 1
            ;;
        esac
        ;;
      'hg')
        case $remoteRepoLocation in
          'bitbucket')
            echo "https://bitbucket.org/$accountName"
            ;;
          *)
            log_error "invalid remote repo location: $remoteRepoLocation"
            return 1
            ;;
        esac
        ;;
      'svn')
        case $remoteRepoLocation in
          '')
            echo ""
            ;;
          *)
            log_error "invalid remote repo location: $remoteRepoLocation"
            return 1
            ;;
        esac
        ;;
      *)
        log_error "invalid remote repo vcs: $upstreamRepoVcs"
        ;;
  esac

}

sync_fork() {

  local upstreamRepoVcs="$1"
  local remoteRepoLocation="$2"
  local masterBranch="$3"
  local repoName="$4"
  local accountName="$5"
  local projectName="$6"
  local skipRepoUpdate=false

  cd "$workDir"

  git clone git@github.com:chlorm-forks/"$repoName".git
  cd "$repoName"


  # Check to see if repo has a remote upstream set
  local checkForUpstreamRemote=$(git remote | grep 'upstream' > /dev/null)
  # If not, add upstream remote
  [ -z "$checkForUpstreamRemote" ] && {
    git remote add upstream "$(upstream_url)"/"$repoName".git || {
      log_error "failed to add upstream remote to $repoName.git"
    }
  }

  # Check to see if the upstream repo still exists
  case "$upstreamRepoVcs" in
    'bazaar')
      return 0
      ;;
    'cvs')
      return 0
      ;;
    'darcs')
      return 0
      ;;
    'git')
      git ls-remote --exit-code --heads "$(upstream_url)"/"$repoName".git
      if test $? = 2 ; then
        log_error "$repoName upstream unreachable"
        skipRepoUpdate=true
      fi
      ;;
    'hg')
      return 0
      ;;
    'svn')
      return 0
      ;;
  esac

  [ $skipRepoUpdate = false ] && {
    git fetch upstream || {
      log_error "git failed to fetch upstream for $repoName"
    }

    git pull upstream "$masterBranch" || {
      log_error "git pull failed for $repoName"
    }

    # Never use --force, could result in data loss in some cases
    git push origin "$masterBranch" || {
      log_error "git push failed for $repoName"
    }
  }

  cd "$workDir"

  [ -d "$repoName" ] && {
    rm -rf "$repoName"/ || {
      log_error "failed to remove $repoName"
    }
  }

}

# sync_fork vcs service master_branch repo_name account_name project_name

